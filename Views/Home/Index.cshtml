<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <style>
        body {
            background-color: #f0f0f0;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
        }

        .input-container {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap; /* Allow wrapping */
            padding: 20px;
            border-radius: 20px;
            background-color: #ffffff;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1); /* Shadow effect */
        }

            .input-container h2 {
                color: #555;
                margin-right: 10px;
                flex-shrink: 0;
            }

            .input-container input[type="search"] {
                padding: 10px 15px;
                border-radius: 10px;
                border: none;
                background-color: #f0f0f0;
                box-shadow: 4px 4px 6px #d1d1d1, -6px -6px 10px #ffffff;
                flex: 1; /* Take remaining space */
                max-width: 300px;
                margin-right: 10px; /* Added spacing */
            }

        .search-button {
            padding: 10px 20px;
            border-radius: 10px;
            border: none;
            color: #f5dd90 !important;
            background-color: #041049 !important;
            cursor: pointer;
            transition: transform 0.2s;
            flex-shrink: 0;
            width: 120px; /* Increased button width */
            margin-left: 10px; /* Added margin to separate buttons */
        }

            .search-button:hover {
                transform: translateY(2px);
            }

        .back-button {
            padding: 12px 24px;
            border-radius: 8px;
            background: #041049;
            color: #F5DD90;
            cursor: pointer;
            transition: transform 0.2s;
            border: none;
            flex-shrink: 0;
            position: absolute;
            top: 70px;
            left: 8px;
            box-shadow: none !important;
        }

        .Backbuttondiv {
            width: 100%;
            height: 50PX;
        }

        .tableclass {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f0f0f0;
        }

        td {
            background-color: #ffffff;
        }

        .card {
            background-color: #ffffff;
            border-radius: 20px;
            padding: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        @@media only screen and (max-width: 600px) {
            .input-container {
                flex-direction: column;
                align-items: flex-start;
                padding: 10px;
            }

                .input-container h2 {
                    margin-bottom: 10px;
                }

                .input-container input[type="search"] {
                    width: 100%;
                    max-width: none; /* No max width for small screens */
                    margin-bottom: 10px; /* Added for spacing */
                }

            .search-button {
                width: 100%;
                margin-bottom: 5px;
                margin-left: 0; /* Reset margin for smaller screens */
            }

            .back-button {
                top: 50px !important;
                margin-left: 0; /* Reset margin for smaller screens */
            }

            table {
                font-size: 14px;
            }

            .tableclass {
                width: 100%;
                overflow-x: auto;
            }
        }



    </style>
    <div class="container">
        <div class="input-container ">
            <div>
                <input type="search" name="conflictNumber" id="conflictNumberInput" placeholder="Conflict No." />
                <button type="button" class="search-button" onclick="filterTableByConflictNumber()">Search</button>
            </div>

            <div class="Backbuttondiv">
                <button type="button" id="btnback" class="back-button" onclick="Back()">Back</button>
            </div>
        </div>
        <div class="card tableclass">
            <table>
                <thead>
                    <tr>
                        <th>Conflict Number</th>
                        <th>Customer Name</th>
                        <th>Matter Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Client 1</td>
                        <td>Matter 1</td>
                        <td>Status 1</td>
                        <td style="cursor:pointer;" onclick="editConflict(1)"><i class="fa fa-pencil" aria-hidden="true"></i></td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Client 2</td>
                        <td>Matter 2</td>
                        <td>Status 2</td>
                        <td style="cursor:pointer;" onclick="editConflict(2)"><i class="fa fa-pencil" aria-hidden="true"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div id="popupContainer"></div>

    <script>

        


        function filterTableByConflictNumber() {
            const searchTerm = document.getElementById('conflictNumberInput').value.trim().toLowerCase();
            const tableRows = document.querySelectorAll('tbody tr');

            tableRows.forEach(function (row) {
                const conflictNumber = row.querySelector('td:nth-child(1)').textContent.trim().toLowerCase();
                if (conflictNumber.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        function editConflict(id) {
            window.location.href = '/Edit/GetConflictNumber?id=' + id;
        }

        function Back() {
            window.location.href = '/ConflictForm/Index';
        }

    </script>
</body>
</html>
