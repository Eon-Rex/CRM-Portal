<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAMCOCRMRELATION</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 headerclass">
            <div class="container-fluid">
                <div class="justify-content-between" >
                    <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span>Conflict Avoidance Form</span></a>
                </div>
                <div class="justify-content-between" >
                    <a class="text-dark" style="cursor:pointer;" onclick="Logout()">                              
                       <span>LogOut</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" class="bi bi-box-arrow-right logout-icon" viewBox="0 0 16 16">
                            <path fill="#F5DD90" fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                            <path fill="#F5DD90" fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                        </svg>
                    </a>
                          
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SAMCOCRMRELATION - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function Logout(){
          sessionStorage.clear();
          window.location.href='/Login/Login';
          history.pushState(null, null, '/Login/Login');
        }


        function ShowMessage(Text, type) {
            switch (type) {
                case "success":
                    Swal.fire({
                        text: Text,
                        icon: 'success',
                        confirmButtonText: 'ok'
                    })
                    break;
                case "error":
                    Swal.fire({
                        text: Text,
                        icon: 'error',
                        confirmButtonText: 'ok'
                    })
                    break;
                case "info":
                    Swal.fire({
                        text: Text,
                        icon: 'info',
                        confirmButtonText: 'ok'
                    })
                    break;
                default:
                    Swal.fire({
                        text: Text,
                        confirmButtonText: 'ok'
                    })

            }


        }

    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
